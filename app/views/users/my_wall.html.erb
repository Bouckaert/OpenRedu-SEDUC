<div class="span3">
  <%= render "users/left_sidebar", user: @user %>
</div>
<div class="span10">
  <div class="content-area">
    <div class="content-body">
      <div class="content-section">
        <%= render "bootstrap/header_breadcrumb", header_breadcrumb_items: [
          { name: "Meu Mural", link: my_wall_user_path(@user), classes: "icon-wall-gray_32_34-before" } ] %>
      </div>
      <%= render "statuses/wall", status: @status, statusable: @user,
        placeholder: "Compartilhe algo com seus Amigos através de seu mural",
        statuses: @statuses %>
    </div>
    <%= render "bootstrap/breadcrumb_mini", breadcrumb_mini_items: [
      { name: "Visão Geral", link: home_user_path(@user), classes: "icon-home-lightblue_16_18-before text-replacement" },
      { name: "Meu Mural", classes: "icon-wall-gray_16_18-before" }] %>
  </div>
</div>
<div class="span3">
  <%= render "users/right_sidebar", user: @user %>
</div>