<%#
  Renderiza o breadcrumb da página de Configurações.

  Variáveis:
    user: o usuário.
%>

<%= render "bootstrap/breadcrumb_mini", :breadcrumb_mini_items => [
  { :name => "Visão Geral",
    :link => home_user_path(user),
    :classes => "icon-home-lightblue_16_18-before text-replacement"
  },
  { :name => "Configurações",
    :link => edit_user_path(user),
    :classes => "icon-manage-lightblue_16_18-before"
  }
  ] %>