<div class="content-section">
  <h4 class="environment-licenses-title">Licenças em uso:
    <%= content_tag :span, licenses_in_use(@licences_in_use), class: "environment-licenses-title-value" %>
    <% tooltip_text = "As licenças são apenas contabilizadas quando você convida alguém para participar de um Curso Privado" %>
    <%= content_tag :span, tooltip_text, rel: "tooltip", title: tooltip_text,
      class: "environment-licenses-title-tooltip icon-info-tooltip-lightblue_16_18 text-replacement" %>
  </h4>
  <p class="legend">Total de licenças em uso nos Cursos deste Ambiente.</p>

  <table class="table-without-borderradius">
    <thead>
      <tr>
        <th>Nome do Curso</th>
        <th class="text-center">Tipo</th>
        <th class="text-center">Armazenamento</th>
        <th class="text-center">Licenças</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "environments/admin/license", collection: @licenses %>
    </tbody>
  </table>
</div>

<hr class="list-separator">

<div class="content-section">
  <h4 class="environment-licenses-title">Faturas</h4>

  <% if @screen == :empty %>
    <div class="environment-invoices-box">
      <div class="environment-invoices-box-row">
        <div class="environment-invoices-box-row-cell environment-invoices-box-title">
          Próxima fatura
        </div>
      </div>
      <div class="environment-invoices-box-row">
        <div class="environment-invoices-box-row-cell">
          <p>Não há fatura para este Ambiente.</p>
          <%= link_to "Crie um Curso Privado", "#" %>
        </div>
      </div>
    </div>

  <% elsif @screen == :first %>
    <div class="environment-invoices-box">
      <div class="environment-invoices-box-row">
        <div class="environment-invoices-box-row-cell environment-invoices-box-title">
          Próxima fatura
        </div>
      </div>
      <div class="environment-invoices-box-row">
        <div class="environment-invoices-box-row-cell">
          <p>R$12,00</p>
          <p class="legend"><strong>Vencimento: 01 de maio, 2013.</strong> Este é um valor previsto e pode ser alterado caso você convide mais membros.</p>
        </div>
      </div>
    </div>
  <% end %>

  <table class="environment-invoices-table table-without-borderradius">
    <thead>
      <tr>
        <th>Inicio</th>
        <th>Término</th>
        <th>Estado</th>
        <th>Valor total</th>
        <th>Detalhes</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "environments/admin/invoice", collection:@invoices %>
    </tbody>
  </table>
</div>