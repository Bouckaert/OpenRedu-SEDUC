<% content_for :container_class do "entity-wrapper" end %>

<div class="span3">
  <%= render "sidebar_new", environment: @environment %>
</div>
<div class="span13">
  <%= render "breadcrumbs_new", environment: @environment %>
  <div class="content-body">
    <%= render "header", environment: @environment %>

    <% if @courses.empty? %>
      <%= render "shared/empty_message",
        icon_message: "Nenhum curso.",
        icon_class: "icon-course-gray_128_130",
        message: "Este Ambiente nÃ£o possui nenhum Curso." %>
    <% else %>
      <% content_for :container_class do " entity-list-intergation" end %>
      <ul class="list-course">
        <%= render partial: "bootstrap/list_course_item",
          collection: @courses %>
      </ul>
      <%= paginate @courses, theme: "new_endless" %>
    <% end %>
  </div>
  <%= render "breadcrumbs_new", environment: @environment %>
</div>