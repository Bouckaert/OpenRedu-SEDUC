<% content_for :container_class do "entity-wrapper" end %>

<div class="span3">
  <%= render "environments/sidebar", environment: @environment %>
</div>
<div class="span13">
  <%= render "environments/breadcrumbs_new", environment: @environment %>
  <div class="content-body">
    <%= render "environments/header", environment: @environment %>

    <div class="entity-actions">
      <% if can?(:manage, @environment) %>
        <%= link_to "Criar novo curso", new_environment_course_path(@environment),
          class: "entity-action button-primary" %>
      <% end %>
    </div>

    <%= new_tabs :environments %>

    <% if @courses.empty? %>
      <%= render "shared/empty_message",
        icon_message: "Nenhum curso.",
        icon_class: "icon-course-gray_128_130",
        message: "Este Ambiente nÃ£o possui nenhum Curso." %>
    <% else %>
      <% content_for :container_class do " entity-list-intergation" end %>
      <ul class="list-course">
        <%= render partial: "bootstrap/list_course_item",
          collection: @courses %>
      </ul>
      <%= paginate @courses, theme: "new_endless" %>
    <% end %>
  </div>
</div>