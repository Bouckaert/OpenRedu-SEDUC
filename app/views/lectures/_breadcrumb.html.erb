<%#
  Renderiza o breadcrumb da página de Aula.

  Variáveis:
    lecture: a aula.
%>

<% subject = lecture.subject %>
<% space = subject.space %>
<% course = space.course %>
<% environment = course.environment %>

<%= render "bootstrap/breadcrumb_mini", breadcrumb_mini_items: [
  { name: "Início", link: home_path, classes: "icon-home-lightblue_16_18-before text-replacement" },
  { name: environment.name, link: environment, classes: "icon-environment-lightblue_16_18-before text-replacement" },
  { name: course.name, link: environment_course_path(environment, course), classes: "icon-course-lightblue_16_18-before text-replacement" },
  { name: space.name, link: space, classes: "icon-space-lightblue_16_18-before" },
  { name: subject.name, link: space_subject_path(space, subject), classes: "icon-content-lightblue_16_18-before" },
  { name: lecture.name, classes: "icon-subject-gray_16_18-before" } ],
  extra_classes: "lights-fade" %>