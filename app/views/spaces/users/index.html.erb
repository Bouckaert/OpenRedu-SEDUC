<% content_for :container_class do "entity-wrapper" end %>

<div class="span3">
  <%= render "spaces/sidebar_new", space: @space, user: current_user %>
</div>
<div class="span13">
  <%= render "spaces/breadcrumbs_new", space: @space %>
  <div class="content-body">
    <%= render "spaces/header_new", space: @space %>

    <div class="content-section">
      <ul class="header-breadcrumb-big">
        <li class="header-breadcrumb-big-item">
          <a class="header-breadcrumb-big-link" href="#" title="Membros">Membros</a>
        </li>
      </ul>
    </div>

    <div class="content-section centralize">
      <%= new_subtabs :spaces_new %>
    </div>

    <div class="content-section">
      <ul class="entity-member-list list-3-columns clearfix">
        <%= render partial: 'bootstrap/member_list_item',
          collection: @users, locals: { entity: @space } %>
      </ul>
    </div>
    <%= paginate @users, theme: 'new_endless' %>
  </div>
</div>