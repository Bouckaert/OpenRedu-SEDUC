<% if @browser_not_supported %>
   <%= render "spaces/admin/disclaimer_chart" %>

<% else %>
  <div class="content-section">
    <h3 class="entity-management-count">Qual a participação dos alunos nas aulas?</h3>
  </div>

  <div class="content-section">
    <%= lazy_load(:chart) do %>
      var graph = new LectureParticipationGraph();
      graph.load({ chart:{ renderTo: "lecture-participation-chart" } ,
                           form: $("#graph-form") });
    <% end %>

    <%= form_tag api_vis_lecture_participation_path(@space.id), method: :get,
      remote: true, class: "form-horizontal", id: "graph-form" do %>

      <div class="control-group row">
        <div class="control-label span3">
          <%= label_tag "Aulas" %>
        </div>
        <div class="controls controls-check-all span9">
          <%= render partial: "spaces/admin/lecture_item_admin",
            collection: @space.subjects %>
          <label class="control-checkbox">
            <input type="checkbox" class="control-checkbox-all" checked="checked">
            Todos
          </label>
        </div>
      </div>

      <div class="control-group control-select-date row">
        <div class="control-label span3">
          <label>Data inicial</label>
        </div>
        <div class="controls span6">
          <%= date_select "date_start_fake", nil, default: Date.today - 9 %>
          <%= text_field_tag :date_start, nil, style: "display: none;",
            class: "reports-form-date-start" %>
        </div>
      </div>

      <div class="control-group control-select-date row">
        <div class="control-label span3">
          <label>Data final</label>
        </div>
        <div class="controls span6 report-form-error-date">
          <%= date_select "date_end_fake", nil, end_year: Date.today.year %>
          <%= text_field_tag :date_end, nil, style: "display: none;",
            class: "reports-form-date-end" %>
        </div>
      </div>

      <%= hidden_field_tag :oauth_token, @token %>

      <div class="content-section clearfix">
        <%= image_tag "spinner-grey.gif", class: "hide" %>
        <%= submit_tag "Atualizar", class: "button-primary pull-right" %>
      </div>
    <% end %>
  </div>
<% end %>