<%#
  Renderiza o breadcrumb da página de Mensagens.

  Variáveis:
    user: o usuário.
%>
<%= render "bootstrap/breadcrumb_mini", :breadcrumb_mini_items => [
  { :name => "Visão Geral",
    :link => home_user_path(user),
    :classes => "icon-home-lightblue_16_18-before text-replacement"
  },
  { :name => "Mensagens",
    :link => user_messages_path(user),
    :classes => "icon-message-lightblue_16_18-before"
  }
  ] %>