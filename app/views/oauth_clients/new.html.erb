<div class="span3">
  <%= render "users/left_sidebar", user: @user %>
</div>
<div class="span10">
  <div class="content-area">
    <div class="content-body">
      <%= render 'oauth_clients/header_breadcrumb_new', user: @user %>

      <div class="my-app-tabs">
        <%= new_tabs(:new_users) %>
      </div>
      <div class="content-section new-app">
        <%= form_for @client_application, url: user_oauth_clients_path(@user), html: { class: "new-app-form" } do |f| %>
          <%= render "oauth_clients/form", f: f %>
          <div class="new-app-actions">
            <%= f.submit "Registrar", class: "button-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <%= render "oauth_clients/breadcrumb", user: @user %>
  </div>
</div>
<div class="span3">
  <%= render "users/right_sidebar", user: @user %>
</div>