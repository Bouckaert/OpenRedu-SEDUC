<div class="span3">
  <%= render "users/left_sidebar", user: @user %>
</div>
<div class="span10">
  <div class="content-area">
    <div class="content-body">
      <%= render 'oauth_clients/header_breadcrumb_index', user: @user %>

      <div class="my-app-tabs">
        <%= new_tabs(:new_users) %>
      </div>
      <div class="content-section">
        <% if @client_applications.empty? %>
        <% else %>
          <table class="table-with-borderradius table-with-link my-apps-list">
            <thead>
              <tr>
                <th width="45%">Nome</th>
                <th width="45%">URL Principal</th>
                <th width="30%">Gerenciamento</th>
              </tr>
            </thead>
            <tbody>
              <% @client_applications.each do |client|%>
                <tr class="link-container">
                  <td>
                    <%= link_to truncate(client.name, length: 27), user_oauth_client_path(@user, client), class: "link-target" %>
                  </td>
                  <td><%= truncate client.url, length: 37 %></td>
                  <td><span><%= link_to 'Editar', edit_user_oauth_client_path(@user, client) %></span> <span><%= link_to 'Excluir', user_oauth_client_path(@user, client), confirm: "VocÃª tem certeza?", method: :delete, class: "icon-close-gray_8_10 replacement close" %></span></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
    <%= render "oauth_clients/breadcrumb", user: @user %>
  </div>
</div>
<div class="span3">
  <%= render "users/right_sidebar", user: @user %>
</div>